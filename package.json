{
  "name": "docpeak-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/react-pdf": "^6.2.0",
    "electron-is-dev": "^3.0.1",
    "pdfjs-dist": "^5.4.54",
    "prismjs": "^1.30.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "react-pdf": "^10.1.0",
    "react-scripts": "5.0.1",
    "rehype-highlight": "^7.0.2",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "prestart": "npm run copy-worker",
    "start": "react-scripts start",
    "prebuild": "npm run copy-worker",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "copy-worker": "cp node_modules/react-pdf/node_modules/pdfjs-dist/build/pdf.worker.min.mjs public/pdf.worker.min.js",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run lint",
    "electron": "npm run build && NODE_ENV=production electron public/electron.js",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron public/electron.js\"",
    "electron-pack": "electron-builder",
    "preelectron-pack": "npm run build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(react-markdown|rehype-highlight|remark-.*|rehype-.*|vfile.*|unist-.*|micromark.*|mdast-.*|hast-.*|property-information|space-separated-tokens|comma-separated-tokens|web-namespaces|devlop)/)"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    }
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "concurrently": "^9.2.0",
    "copy-webpack-plugin": "^13.0.1",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "gts": "^6.0.2",
    "identity-obj-proxy": "^3.0.0",
    "typescript": "~5.1.0",
    "wait-on": "^8.0.4"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "build": {
    "appId": "com.docpeak.app",
    "productName": "DocPeak",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "node_modules/**/*"
    ],
    "mac": {
      "icon": "assets/icon.icns"
    },
    "win": {
      "icon": "assets/icon.ico"
    },
    "linux": {
      "icon": "assets/icon.png"
    },
    "typescript": "~5.1.0"
  }
}
